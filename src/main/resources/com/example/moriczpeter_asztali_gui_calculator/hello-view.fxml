<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.moriczpeter_asztali_gui_calculator.HelloController" >
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox spacing="10.0">
            <children>
                <TextField fx:id="input1" promptText="Első szám" />
                <TextField fx:id="input2" promptText="Második szám" />
            </children>
        </HBox>
        <HBox spacing="10.0">
            <children>
                <Button text="+" onAction="#handleAddition" />
                <Button text="-" onAction="#handleSubtraction" />
                <Button text="*" onAction="#handleMultiplication" />
                <Button text="/" onAction="#handleDivision" />
                <Button text="\%" onAction="#handleModulo" />
            </children>
        </HBox>
        <Label fx:id="resultLabel" text="Eredmény: " />
    </children>
</VBox>

